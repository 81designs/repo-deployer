<% content_for :breadcrumbs do %>
  <li class="active">Repo Deployer</li>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <%= render(partial: @repos) %>
    <% if @repos.empty? %>
      <p class="alert">You have not added any git repositories.</p>
    <% end %>
    <p>
      <%= link_to 'Add GitHub Repo', github_repos_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>